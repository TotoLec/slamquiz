{% extends 'base.html.twig' %}

{% block title %}{{'Question index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Question index'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'Text'|trans}}</th>
                <th>{{'Created_at'|trans}}</th>
                <th>{{'Updated_at'|trans}}</th>
                <th>{{'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.text }}</td>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" href="{{ path('question_show', {'id': question.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-warning" href="{{ path('question_edit', {'id': question.id}) }}"><i class="fas fa-pen"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{'no records found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('question_new') }}"><i class="fas fa-plus-square"></i></a>
{% endblock %}
