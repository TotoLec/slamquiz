{% extends 'base.html.twig' %}

{% block title %}{{'Question'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Question'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>{{'Text'|trans}}</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>{{'Created_at'|trans}}</th>
                <td>{{ question.createdAt ? question.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{'Updated_at'|trans}}</th>
                <td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('question_index') }}"><i class="fas fa-reply"></i></a>

    <a class="btn btn-warning" href="{{ path('question_edit', {'id': question.id}) }}"><i class="fas fa-pen"></i></a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
