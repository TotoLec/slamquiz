{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quiz.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ quiz.categories.shortname }}</td>
            </tr>
            <tr>
                <th>Number_of_question</th>
                <td>{{ quiz.numberOfQuestion }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ quiz.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="btn-group" role="group" aria-label="Basic example">
        <a class="btn btn-primary" href="{{ path('quiz_index') }}"><i class="fas fa-reply"></i></a>
        {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-warning" href="{{ path('quiz_edit', {'id': quiz.id}) }}"><i class="fas fa-pen"></i></a>{% endif %}
        {% if is_granted('ROLE_SUPER_ADMIN') %}{{ include('quiz/_delete_form.html.twig') }}{% endif %}
    </div>
{% endblock %}
