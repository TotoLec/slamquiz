{% extends 'base.html.twig' %}

{% block title %}{{'Category'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Category'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id'|trans}}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{'Shortname'|trans}}</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>{{'Longname'|trans}}</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group" role="group" aria-label="Basic example">
    <a class="btn btn-primary" href="{{ path('category_index') }}"><i class="fas fa-reply"></i></a>
    <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-pen"></i></a>
    {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
