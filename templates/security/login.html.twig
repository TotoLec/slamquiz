{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in!{% endtrans %}{% endblock %}

{% block body %}
<form method="post">
    <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-4">
        <br>
            {% if app.user %}
                <div class="mb-3">
                    {% trans %}You are logged in as {% endtrans %}{{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                </div>
            {% endif %}
        </div>
        <div class="col-sm-8 col-md-8 col-lg-4">
        <h1>{% trans %}Please sign in{% endtrans %}</h1>
        <label for="inputEmail" class="sr-only">{% trans %}Email{% endtrans %}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <label for="inputPassword" class="sr-only">{% trans %}Password{% endtrans %}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{% trans %}Password{% endtrans %}" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <div class="btn-group col-sm-12">
        <a class="btn btn-lg btn-primary" href="{{ path('app_register') }}">
            {% trans %}Register{% endtrans %}
        </a>
        <button class="btn btn-lg btn-success" type="submit">
            {% trans %}Sign in{% endtrans %}
        </button>
    </div>
    </div>
        <div class="col-sm-2 col-md-2 col-lg-4"></div>
    </div>
</form>
{% endblock %}
